<%- include("partials/header") -%>
    <h1>Compose</h1>
    <form action="/compose" method="post">
        <div class="form-group">
            <label for="postTitleBox">Title</label>
            <input type="text" class="form-control" name="postTitle" id="postTitleBox">
        </div>
        <div class="form-group">
            <label for="postDescription">Post</label>
            <textarea class="form-control" name="postBody" id="postDescription" cols="30" rows="5"></textarea>
        </div>
        <button type="submit" class="btn btn-primary" name="button">Publish</button>
    </form>
<%- include("partials/footer") -%>